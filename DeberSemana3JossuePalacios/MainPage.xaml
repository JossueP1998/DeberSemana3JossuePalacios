<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DeberSemana3JossuePalacios.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Deber Semana 3: Login con Clave" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <Entry x:Name="txtUser" Placeholder="Ingrese el Usuario"></Entry>
        <Entry x:Name="txtPass" Placeholder="Ingrese la contraseña" IsPassword="True"></Entry>
        <Label Text="" x:Name="lblResultado" TextColor="Red"></Label>

        <Button x:Name="btnAbrir"
                Text="Ingresar"
                Clicked="btnAbrir_Clicked"></Button>



    </StackLayout>

</ContentPage>
